<!-- js_dom/10_dom_focus_error.html -->
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>focus error</title>
<script>

	function lower(el){
		// 기존에 입력된 value 값이 알파벳이라면 소문자로 변경하여 저장
		el.value = el.value.toLowerCase();
	}
	
	function upper(el){
		console.log(el);
		// 매개변수로 전달된 입력 태그 요소에 작성 된 값.
		let v = el.value;
		// 문자열의 알파벳을 대문자로 변환하여 반환
		el.value = v.toUpperCase();
	}
</script>
</head>
<body>
	<h1>focus blur</h1>
	<!-- focus - focus를 얻었을 때 -->
	<!-- blur -focus를 잃었을 때 -->
	<input type="text" onfocus="upper(this);" onblur="lower(this);" />
	<br/>
	<h1>focusin focusout</h1>
</body>
</html>












