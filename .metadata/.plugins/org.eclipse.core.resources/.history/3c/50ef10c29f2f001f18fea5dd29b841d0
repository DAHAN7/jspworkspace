<!-- js_dom/08_dom_node_ex.html -->
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<style type="text/css">
	.todos{
		border:1px solid skyblue;
		color:blue;
		padding:20px;
		width:300px;
		margin-bottom:10px;
		list-style:none;
	}
</style>
</head>
<body>
	<input type="text" id="todo" placeholder="할일 작성"/>
	
	<!-- 할일 목록 저장할 list -->
	<ul id="toDoList">
		
	</ul>
	<script>
		let toDoList = document.querySelector("#toDoList");
		
		for(let i = 0; i < 5; i++){
			let li = document.createElement("li");
			li.innerText = '할일 추가 - '+ i;
			li.className = 'todos';
			toDoList.prepend(li);
		}
	</script>
</body>
</html>









