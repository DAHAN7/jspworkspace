<!-- js_dom/15_dom_event_mouse_move.html -->
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Mouse mode & mouse event</title>
<script>
	//브라우저에 모든 문서가 출력 완료 되고
	// 사용자와 상호작용(사용)할 준비가 완료되었을때 발생되는 이벤트
	window.onload = function(){
		
		console.log("window.onload");
		document.querySelector("div").onmousemove = function(event){
			let x = event.pageX;
			let y = event.pageY;
			console.log(`x : ${x} , y : ${y}`);
		};
	};
	
</script>

</head>
<body>
	<p id="pTag"></p>
	<div style="background-color:yellow;width:300px;height:100px;"></div>
</body>
</html>