<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>interval catch</title>
<style>
	#box{
		position:absolute;
		width:70px;
		height:70px;
		top:50%;
		left:50%;
		background-color:darksalmon;
		color:white;		
	}
</style>
</head>
<body>
	<div id="box">잡아랏!</div>
	
	<script>
		let x = 0, y = 0;
		
		let interval = setInterval(function(){
			// 0.5초에 한번 씩 box의 위치를 변경 
			let box = document.querySelector("#box");
			
			let top = screen.availHeight;
			let left = screen.availWidth;
			/*
			x += 10;
			y += 10;
			*/
			
			x = Math.random() * left;
			y = Math.random() * top;
			
			box.style.top = y+"px";
			box.style.left = x + "px";
			
		}, 500);
		
	</script>
</body>
</html>